        </mj-section>

        <!-- Features info box -->
        <mj-section padding="24px 24px 0 24px">
            <mj-column
                background-color="rgba(230, 238, 245, 0.03)"
                border-radius="12px"
                padding="24px"
            >
                <mj-text
                    align="center"
                    font-size="14px"
                    font-weight="600"
                    color="#e6eef5"
                    padding="0 0 16px 0"
