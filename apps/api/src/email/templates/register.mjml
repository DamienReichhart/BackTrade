        </mj-section>

        <!-- Footer -->
        <mj-section padding="32px 24px 48px 24px">
            <mj-column>
                <mj-text
                    align="center"
                    font-size="14px"
                    color="rgba(230, 238, 245, 0.5)"
                    padding="0 0 16px 0"
                >
                    This email was sent by BackTrade. If you didn't request this
                    email, you can safely ignore it.
                </mj-text>
                <mj-text
                    align="center"
                    font-size="12px"
                    color="rgba(230, 238, 245, 0.3)"
