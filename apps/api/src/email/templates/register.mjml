<mjml>
    <mj-head>
        <mj-title>Welcome to BackTrade</mj-title>
        <mj-preview
            >Your BackTrade account has been created successfully</mj-preview
        >

        <!-- Include global styles -->
        <mj-include path="./partials/styles.mjml" />
    </mj-head>

    <mj-body background-color="#0b0f14">
        <!-- Header -->
        <mj-section padding="48px 24px 32px 24px">
            <mj-column>
                <mj-text align="center" padding="0">
                    <span
                        style="
                            font-size: 28px;
                            font-weight: 600;
                            color: #e6eef5;
                            letter-spacing: -0.5px;
                        "
