        <mj-section padding="0 24px">
            <mj-column
                background-color="rgba(230, 238, 245, 0.06)"
                border-radius="16px"
                padding="40px 32px"
            >
                <!-- Welcome badge -->
                <mj-text align="center" padding="0 0 8px 0">
                    <span class="badge badge-success">Welcome aboard</span>
                </mj-text>

                <!-- Main heading -->
                <mj-text
                    align="center"
                    font-size="28px"
                    font-weight="700"
                    color="#e6eef5"
                    padding="16px 0 8px 0"
                    line-height="1.3"
                >
                    Account created!
                </mj-text>

                <!-- Subheading -->
                <mj-text
                    align="center"
                    font-size="16px"
                    color="rgba(230, 238, 245, 0.7)"
                    padding="0 0 32px 0"
                >
                    Hi {{ username }}, thanks for joining BackTrade! Your
                    account has been successfully created and is ready to use.
                </mj-text>

                <!-- CTA Button -->
                <mj-button href="{{dashboardUrl}}" align="center">
                    Go to Dashboard
                </mj-button>

                <!-- Security notice -->
                <mj-text
                    align="center"
                    font-size="13px"
