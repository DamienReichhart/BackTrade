{
  "name": "@backtrade/api",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "dev": "nodemon --legacy-watch --watch src --ext ts,js,json --exec tsx src/server.ts",
    "build": "esbuild src/server.ts --bundle --platform=node --outfile=dist/server.js --format=cjs --target=node24",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@backtrade/types": "workspace:*",
    "@backtrade/utils": "workspace:*",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "express": "5.1.0",
    "express-rate-limit": "8.2.1",
    "helmet": "8.1.0",
    "pino": "10.1.0",
    "pino-http": "11.0.0",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@backtrade/eslint-config": "workspace:*",
    "@backtrade/tsconfig": "workspace:*",
    "@eslint/js": "^9.39.1",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "5.0.5",
    "@types/jest": "30.0.0",
    "@types/node": "24.10.1",
    "esbuild": "0.27.0",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "jest": "30.2.0",
    "nodemon": "^3.1.11",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "8.47.0"
  },
